@model IEnumerable<Vchat.Models.User>
@{
    ViewBag.Title = "Новые контакты";
}
 
<table class="table">
    <tr><th>Email</th><th></th></tr>
    @foreach (var user in Model){
        <tr>
            <td>@user.Email</td>
            <td>
                <form asp-action="AddContacts" asp-route-id="@user.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-primary">
                        Добавить контакт
                    </button>
                </form>
            </td>
        </tr>
    }
</table>